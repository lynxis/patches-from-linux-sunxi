+void audio_set_hdmi_func(__audio_hdmi_func * hdmi_func)
+{
+	g_hdmi_func.hdmi_audio_enable = hdmi_func->hdmi_audio_enable;
+	g_hdmi_func.hdmi_set_audio_para = hdmi_func->hdmi_set_audio_para;
