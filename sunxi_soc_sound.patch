+	hdmi_para.sample_rate = params_rate(params);
+	hdmi_para.channel_num = params_channels(params);
+	g_hdmi_func.hdmi_set_audio_para(&hdmi_para);
+	g_hdmi_func.hdmi_audio_enable(1, 1);
+
+	return 0;
+}
