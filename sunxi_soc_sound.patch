+int codec_wrreg_bits(unsigned short reg, unsigned int	mask,	unsigned int value)
+{
+	int change;
+	unsigned int old, new;
+
+	old	=	codec_rdreg(reg);
+	new	=	(old & ~mask) | value;
+	change = old != new;
+
+	if (change){
+		codec_wrreg(reg,new);
+	}
+
+	return change;
+}
