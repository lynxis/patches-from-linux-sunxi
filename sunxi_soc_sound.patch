+	.digital_mute = sndhdmi_mute,
+	.set_sysclk = sndhdmi_set_dai_sysclk,
+	.set_clkdiv = sndhdmi_set_dai_clkdiv,
+	.set_fmt = sndhdmi_set_dai_fmt,
