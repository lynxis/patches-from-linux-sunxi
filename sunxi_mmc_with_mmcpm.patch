+void sunximmc_procfs_attach(struct sunxi_mmc_host *smc_host)
+{
+    struct device *dev = &smc_host->pdev->dev;
+    char sunximmc_proc_rootname[32] = {0};
+
+    //make mmc dir in proc fs path
