+{
+    u32 rval = readl(SDXC_REG_GCTRL) | SDXC_SoftReset | SDXC_FIFOReset | SDXC_DMAReset;
+    s32 time = 0xffff;
+
+    writel(rval, SDXC_REG_GCTRL);
+    while((readl(SDXC_REG_GCTRL) & 0x7) && time--);
+    if (time <= 0)
+    {
+        SMC_ERR("sdc %d reset failed\n", smc_host->pdev->id);
+        return -1;
+    }
+    return 0;
+}
